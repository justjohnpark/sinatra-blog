<h1>register</h1>

<% if @error %>
  <div class='wrap-center'><div class='error'><%= @error %></div></div>
<% end %>

<form action='/users/new' method='post' class='center-form'>
  <input name='first_name' placeholder="First name" value="<%= @user.first_name %>">
  <input name='email' placeholder="Email" value="<%= @user.email %>">
  <input type='password' name='password' placeholder="Password">
  <input type='password' name='password_conf' placeholder="Confirm password">
  <div class='wrap-center'><input class='btn' type='submit' value='register'></div>
</form>
